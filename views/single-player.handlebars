<h3>Player Information</h3>
{{#if player}}
  <div class="picture"><img src="/img/default-player.jpg" alt="{{ player.first_name }} {{ player.last_name }}"></div>
  <p><strong>Name:</strong> {{ player.first_name }} {{ player.last_name }}</p>
  <p><strong>Walk Out Song:</strong> {{ player.walk_out_song }}</p>
  <p><strong>Dart Brand:</strong> {{ player.dart_brand }}</p>
  <p><strong>Points:</strong> {{ player.points }}</p>
  <p><strong>Legs Won:</strong> {{ player.legs_won }}</p>
  <p><strong>Legs Lost:</strong> {{ player.legs_lost }}</p>
  <p><strong>Leg+/-:</strong> {{ player.leg_plus }}</p>
  <p><strong>Matches Played:</strong> {{ player.matches_played }}</p>
  <a href="/players">Back to players list</a>
{{else}}
  <p>Player not found.</p>
{{/if}}

<h3>Match History</h3>
{{#if matches}}
  <table>
    <thead>
      <tr>
        <th>Opponent</th>
        <th>Result</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each matches}}
        <tr>
          <td>{{ opponent }}</td>
          <td>{{ result }}</td>
          <td>{{ date }}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No match history available.</p>
{{/if}}
